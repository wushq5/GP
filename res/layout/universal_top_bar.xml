<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="#3cc3f5" >

    <ImageView
        android:id="@+id/iv_universal_top_bar_back"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_universal_top_bar_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_universal_top_bar_back"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_universal_top_bar_more"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/ic_action_overflow" />

    <Button
        android:id="@+id/btn_universal_top_bar_new"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/btn_universal_top_bar_more"
        android:background="@drawable/ic_action_new" />

</RelativeLayout>