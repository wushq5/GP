<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="#3cc3f5" >

    <ImageView
        android:id="@+id/iv_universal_top_bar_left"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:src="@drawable/bt_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_universal_top_bar_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_universal_top_bar_left"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_universal_top_bar_right_1"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/ic_option"
        android:visibility="gone" />

    <!-- 新建笔记 -->

    <Button
        android:id="@+id/btn_universal_top_bar_right_2"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/btn_universal_top_bar_right_1"
        android:background="@drawable/ic_action_new"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_universal_top_bar_right_3"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/btn_universal_top_bar_right_2"
        android:background="@drawable/bt_notelist"
        android:visibility="gone" />

</RelativeLayout>