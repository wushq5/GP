<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/universal_top_bar" />

    <ImageView
        android:id="@+id/iv_createnote_pic"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_margin="10dip"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/vv_createnote_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dip"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_createnote_txt"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1"
        android:gravity="top|left"
        android:hint="在此输入笔记内容" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_createnote_save"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dip"
            android:background="@drawable/btn_universal_selector"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_createnote_cancel"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dip"
            android:background="@drawable/btn_universal_selector"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>