<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_action_new"
        android:contentDescription="@string/app_name" />

    <EditText
        android:id="@+id/et_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_account"
        android:hint="教务系统账号"
        android:inputType="numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_account"
        android:drawableLeft="@drawable/ic_password"
        android:hint="教务系统密码"
        android:inputType="textPassword"
        android:text="" />

    <EditText
        android:id="@+id/et_login_checkcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_password"
        android:hint="输入验证码" />

    <ImageView
        android:id="@+id/iv_login_code"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_login_checkcode" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@drawable/ic_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_universal_selector"
        android:text="登陆"
        android:textColor="#fff" />

</RelativeLayout>